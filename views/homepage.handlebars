<section class='homepage-section'>
    Welcome to <span class='strong'>Star Sign Lovers</span>! Please login or signup to view your compatible matches based off of your astrology sign :)
</section>

<section class='homepage-section'>
    <h2>Your Matches</h2>

    {{#if profiles.length}}
    <ol class='profile-list'>
        {{#each profiles as |profile|}}
        <li>
            <article class='profile'>
                <div class='title text-bg-light'>
                    <a href='/profile-page/{{id}}'><strong>{{display_name}}, {{format_age birthday}}</strong></a>
                </div>
                <div class='profile-content'>
                    <div>
                        ‚òÄ {{format_sunsign birthday}}
                        |
                        üìç {{location}}
                    </div>
                    {{#if bio}}
                        <div class='bio-preview'>
                            <div><span class='strong'>bio</span></div>
                            <div>{{bio}}</div>
                        </div>
                    {{/if}}
                </div>
            </article>
        </li>
        {{/each}}
    </ol>

    {{else}}

    <div class='no-matches text-bg-light'>No matches found!</div>

    {{/if}}
</section>